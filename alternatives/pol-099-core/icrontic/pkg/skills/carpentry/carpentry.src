              0x7054:   theitem.quality := 0.9; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7056:   theitem.quality := 1.0; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7055:   theitem.quality := 1.1; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7057:   theitem.quality := 1.2; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);

