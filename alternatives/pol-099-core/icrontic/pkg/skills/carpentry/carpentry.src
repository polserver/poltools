      endif
      SetName(theitem, itemname);
    endif
  else
    var fq :=  RandomInt(GetEffectiveSkill(who, SKILLID_CARPENTRY));
    if(skill > 20)
      skill := skill - 20;
    else
      skill := 3;
    endif
    if((fq < skill) and (exchk))
