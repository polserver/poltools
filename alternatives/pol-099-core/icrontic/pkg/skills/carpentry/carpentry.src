program carpentry(who, tool)
  EraseObjProperty(who, "IsMeditating");
  EraseObjProperty(who, "HealTimer");
  if(!can_access(who, tool))
    return;
  endif
  if((!Accessible(who,tool)) || (Distance(who, tool) > 1))
    return 0;
  endif
  GFInitGump(0, 0);
  GFNoDispose();
  GFNoClose();
  GFResizePic(10, 70, 3500, MAX_X, MAX_Y);
  GFPage(0);
  GFGumpPic(200, 380, 5560); // Blacksmith Orb
  GFTextLine(30,  415, 0x0480, "Icrontic: Lost Souls"); // Added In
  GFTextLine(110,  80, 900, "CARPENTRY SELECTION MENU");
  GFTextLine( 30, 121,   0, "Materials");
  GFTextLine(160, 121,   0, "Tables");
  GFTextLine(260, 121,   0, "Chairs");
  GFTextLine(350, 121,   0, "Instruments");
  GFTextLine( 30, 351,   0, "Shelves");
  GFTextLine(140, 351,   0, "Containers");
  GFTextLine(265, 351,   0, "Misc");
  GFTextLine(365, 351,   0, "add-ons");
  GFTextLine( 90, 380, 900, "Make Last");
  var lastitm := GFButtonID( 70, 384,   3, 4, 99);
  var close   := GFButtonID(410, 380, 242, 241, 1);
  GFButtonPage(110, 123, 5209, 5209,  2);
  GFButtonPage(210, 123, 5209, 5209,  3);
  GFButtonPage(310, 123, 5209, 5209,  4);
  GFButtonPage(440, 123, 5209, 5209,  5);
  GFButtonPage( 90, 353, 5209, 5209,  6);
  GFButtonPage(220, 353, 5209, 5209,  7);
  GFButtonPage(320, 353, 5209, 5209,  8);
  GFButtonPage(430, 353, 5209, 5209,  9);
  GFTextLine(  300, 420, 900, "How Many?");
  GFGumpPic(390, 417, 2443);
  var sa := GetObjProperty(who, "#CarpAmt");
  if(!sa)
    sa := 1;
  endif
  var ct := GFTextEntry(400, 420, 100, 30, 0, sa);
  ComposeSubMenu(who);
  var res := GFSendGump(who);
  if((res[0] == 999) || (res[close.keyid]))
    SendSysMessage(who, "Cancelled");
    return;
  endif
  var amt := CInt(SplitWords(res[ct.keyid])[2]);
  if(!amt)
    amt := 1;
  elseif(amt > 1000)
    SendSysMessage(who, "You can only make up to 1000 at a time.");
    return;
  endif
  SetObjProperty(who, "#CarpAmt", amt);
  var cont := tool.container;
  if((!cont) || (cont.isa(POLCLASS_MOBILE)))
    cont := who.backpack;
  endif
  var the_objtype := res[0];
  if(res[lastitm.keyid])
    the_objtype := GetObjProperty(who, "LastCarpentryItem");
    if(!the_objtype)
      SendSysMessage(who, "You have never woodworked before.");
      return;
    endif
  endif
  SetObjProperty(who, "LastCarpentryItem", the_objtype);
  if(makewooditems(who, tool, the_objtype, amt, cont) == 1)
    var chk := 0;
    SendSysMessage(who, "Target the wood you wish to work with");
    var item1 := Target(who);
    if(!item1)
      SendSysMessage(who, "Cancelled");
      return;
    endif
    var x := who.x;
    var y := who.y;
    var cfg := ReadConfigFile( "carpentry" );
    var material2obj := cfg[the_objtype]."material2obj";
    var item2 := 0;
    var logname := "";
    if(material2obj)
      var holder := "";
      if(material2obj == "cloth")
        holder := "fabric";
      else
        holder := "ingots";
      endif
      SendSysMessage(who, "Target the " + holder + " you wish to use");
      item2 := Target(who);
      if(!item2)
        SendSysMessage(who, "Cancelled.");
        return;
      endif
    endif
    var totalcloth := item2.amount * 50;
    if((item2.objtype >= UOBJ_BOLT_START) && (item2.objtype <= UOBJ_BOLT_END))
//      totalcloth := item2.amount * 50;
      if(item2.container)
        var bag := item2.container;
        var counter := 1;
        MoveItemToLocation(item2, 5855, 1158, 0, MOVEITEM_FORCELOCATION);
        var holder := CreateItemInContainer(who.backpack, 0x1766, 50);
        if(holder)
          while(counter < item2.amount)
            if(CreateItemInContainer(who.backpack, 0x1766, 50))
              counter := counter + 1;
            else
              counter := item2.amount;
              DestroyItem(holder);
              MoveItemToContainer(item2, bag);
              item2 := 0;
              break;
            endif
          endwhile
          if(holder)
            DestroyItem(item2);
            item2 := holder;
          endif
        else
          MoveItemToContainer(item2, bag);
          item2 := 0;
        endif
      else
        var x := item2.x;
        var y := item2.y;
        var z := item2.z;
        if(MoveItemToLocation(item2, 5855, 1158, 0, MOVEITEM_FORCELOCATION))
          var temppack := CreateItemAtLocation(5854, 1158, 0, 0xe40, 1);
          var holder := CreateItemInContainer(temppack, 0x1766, totalcloth);
          if(MoveItemToLocation(holder, x, y, z, MOVEITEM_NORMAL))
            DestroyItem(item2);
            item2 := holder;
          else
            MoveItemToLocation(item2, x, y, z, MOVEITEM_FORCELOCATION);
            DestroyItem(holder);
            item2 := 0;
          endif
          DestroyItem(temppack);
        else
          item2 := 0;
        endif
      endif
      if(item2 = 0)
        SendSysMessage(who, "your backpack was too full");
        return;
      endif
    endif
    while(chk < amt)
      if((who.x != x) || (who.y != y))
        SendSysMessage(who, "You stop what you are doing.");
        break;
      endif
      if(!tool)
        break;
      endif
      if(MakeCarpentryItems(who, tool, the_objtype, cont, item1, item2, logname) == 1)
        chk := chk + 1;
      else
        break;
      endif
    endwhile
  endif
endprogram

function MakeCarpentryItems(who, tool, objtype, cont, item1, item2, logname)
  EraseObjProperty(who, "IsMeditating");
  EraseObjProperty(who, "HealTimer");
  var itemname, theitem;
  var type, elm, exchk, skill, name, skill2, skillid, material, material2, material2obj, material3, material3obj;
  var carpentryskill := CInt(GetEffectiveSkill(who, SKILLID_CARPENTRY));
  var cfg := ReadConfigFile( "carpentry" );
  case(objtype)
    0x0faf: objtype := 0xb000;
    0x0fb1: objtype := 0xb001;
    0x1070: objtype := 0xb002;
    0x1ec0: objtype := 0xb003;
    0x1019: objtype := 0xb004;
    0x0fea: objtype := 0xb005;
    0x1216: objtype := 0xb006;
    0x197a: objtype := 0xb007;
    0x105f: objtype := 0xb008;
    0x0a81: objtype := 0xb009;
    0x0b42: objtype := 0xb00a;
    0x1920: objtype := 0xb00b;
    0x092b: objtype := 0xb00c;
    0x0461: objtype := 0xb00d;
  endcase
  elm          := FindConfigElem(cfg, objtype);
  skill        := elm.skill;
  name         := elm.Name;
  exchk        := elm.exchk;
  skillid      := elm.skillID;
  skill2       := Cint(elm.skill2);
  material     := elm.material;
  material2    := CInt(elm.material2);
  material2obj := elm.material2obj;
  itemname     := elm.name;
  var modpts := 0;
  if(carpentryskill >=  skill)
    modpts := (carpentryskill - (skill - 10));
  endif
  var ok1:=0;
  var ok2:=0;
  if(!material2)
    ok2 := 1;
  endif
  if(!skillid)
    ok2:=1;
  endif
  if(!can_access(who, item1))
    return 0;
  endif
  if((!Accessible(who, item1)) || (Distance(who, item1) > 2) || (!ReserveItem(item1)))
    SendSysMessage(who, "You cannot use that.");
    return 0;
  endif

////////////////////////////////// Modified for Color logs
  var logpts := 0;
  var is_log := 0;
  case(item1.objtype)
    0x1bdd:         is_log := 1; logpts := 0;
    0x1bd7:         is_log := 1; logpts := 0;
    0x7051:	    is_log := 1; logpts := 5;
    0x7052:	    is_log := 1; logpts := 5;
    0x7053:	    is_log := 1; logpts := 10;
    0x7054:	    is_log := 1; logpts := 10;
    0x7055:	    is_log := 1; logpts := 15;
    0x7056:	    is_log := 1; logpts := 15;
    0x7057:	    is_log := 1; logpts := 20;

  endcase
  if(is_log == 0)
    SendSysMessage(who, "You can only carpenter wood");
    return 0;
  endif
//////////////////////////////////
  if(material > item1.amount)
    SendSysMessage(who, "You dont have enough wood to make that.");
    return 0;
  endif
  if(material2)
    if(item2.objtype in  gettypes(material2obj))
      if(item2.amount >= material2)
        if(!ReserveItem(item2))
          SendSysMessage(who, "You cannot use that");
          return 0;
        endif
      else
        SendSysMessage(who, "You dont have enough of that material");
        return 0;
      endif
    else
      SendSysMessage(who, "Thats not the correct material");
      return 0;
    endif
    if(!can_access(who, item2))
      return 0;
    endif
    if((!Accessible(who, item2)) || (Distance(who, item2) > 2) || (!ReserveItem(item2)))
      SendSysMessage(who, "You cannot use that.");
      return 0;
    endif
  endif

  var sncfg     := ReadConfigFile(":hooks:skillsdef");
  var skillelem  := FindConfigElem(sncfg, skillID);
  var skillname := skillelem.name;

  // Determine the material and skill required to make the item and inform the player
    if(!material2obj)
      SendSysmessage (who, "(" + material + " wood and " + skill + " skill)");
    else
      SendSysmessage (who, "(" + material + " wood and " + material2 + " " + material2obj + ")");
      SendSysmessage (who, "(" + skill + " Carpentry and " + skill2 + " " + skillname + ")");
    endif

  PlaySoundEffect(who, 0x23e);
  sleep(2);
  PlaySoundEffect(who, 0x23e);
  sleep(2);
  PlaySoundEffect(who, 0x23e);
  sleep(2);
  var chk := 0;
  if(CheckSkill(who, SKILLID_CARPENTRY, skill, (skill * 2)))
    if(skillid)
      if(CheckSkill(who, skillid, CInt(skill2), (skill2 * 2)))
        if(SubtractAmount(item1, material) && SubtractAmount(item2, material2))
          theitem := CreateItemInContainer(cont, objtype, 1);
          if(theitem)
            CheckToolWear (who, tool, SKILLID_CARPENTRY);
            chk := 1;
          endif
        endif
      endif
    else
      if(SubtractAmount(item1, material))
        theitem := CreateItemInContainer(cont, objtype, 1);
        if(theitem)
          CheckToolWear (who, tool, SKILLID_CARPENTRY);
          chk := 1;
        endif
      endif
    endif
  endif
  if(chk == 0)
    SubtractAmount(item1, (material / 2));
    if(material2)
      SubtractAmount(item2, CInt(material2 / 2));
    endif
    SendSysMessage( who, "You destroy some materials.");
    return 1;
  endif
    if (material)
///////////////////////////////////// Modified for colored logs
            logname := "";
            case(item1.objtype)
              0x1bdd:       logname := ""          + name; theitem.color := 0;
              0x1bd7:       logname := ""          + name; theitem.color := 0;
              0x7051:	    logname := "Elven "    + name; theitem.color := 567;
	      0x7052:	    logname := "Moonbeam " + name; theitem.color := 211;
              0x7053:	    logname := "Oak "      + name; theitem.color := 1887;
              0x7054:	    logname := "Willow "   + name; theitem.color := 48;
              0x7056:	    logname := "Jungle "   + name; theitem.color := 57;
              0x7055:	    logname := "Silver "   + name; theitem.color := 2301;
              0x7057:	    logname := "Avatar "   + name; theitem.color := 1106;

            endcase
          else
            logname := itemname;
          endif
//////////////////////////////////////
  theitem.movable := 1;
  if(logpts >= itemname)
    ExceptionalFameMod(who, carpentryskill, skill, skill / 2);
    if(exchk)
      var itemname := "";
//      theitem.quality := 1.2;
            case(item1.objtype)			// These qualitys are for exceptional, so log quality is more than 1.0 ;)
              0x1bdd:   theitem.quality := 1.0; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
	      0x1bd7:   theitem.quality := 1.0; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7051:   theitem.quality := 1.1; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7052:   theitem.quality := 1.1; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7053:   theitem.quality := 1.2; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7054:   theitem.quality := 1.3; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7056:   theitem.quality := 1.4; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7055:   theitem.quality := 1.5; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
              0x7057:   theitem.quality := 1.6; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);

  endcase
      theitem.hp := theitem.maxhp;
      SendSysMessage(who, "You make an exceptional item and put it in your pack");
      SetObjProperty(theitem, "Exceptional", 1);
      SetObjProperty(theitem, "type","c");
      if(skill >= 99)
        itemname := "an exceptional " + logname + " [Crafted by " + who.name + "]";
      else
