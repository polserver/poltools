//      theitem.quality := 0.7;
            case(item1.objtype)
              0x1bdd:   theitem.quality := 0.6; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
	      0x1bd7:   theitem.quality := 0.6; theitem.buyprice := CInt(theitem.buyprice * theitem.quality);
