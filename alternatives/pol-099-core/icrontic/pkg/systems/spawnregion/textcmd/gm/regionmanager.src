  var gdata, spawns, spawntxt, rdata, ctxt, status, freq, bt, edt := 0;
  var btstatus := array;
  var btspawn := array;
  var btdespawn := array;
  var btrespawn := array;
  var holder := {};
  foreach grp in reggroups
    ctxt := COLOR_GREEN;
    GFTextLine(xTxt, yTxt, ctxt, grp);
    ytxt := ytxt + yshift;
  endforeach
  var retkey := GFSendGump(who);
  var num, rgelem;
  if(retkey[cancel.keyid])
