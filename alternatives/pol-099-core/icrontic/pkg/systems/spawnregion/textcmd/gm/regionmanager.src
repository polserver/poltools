  GFTextEntry(xTxt+324, yTxt, 200, 30, COLOR_GREEN, "");
  GFTextEntry(xTxt+402, yTxt, 200, 30, COLOR_GREEN, "");
  yTxt := ytxt + yshift;
  GFTextEntry(    xTxt, yTxt, 200, 30, COLOR_GREEN, "");
  GFTextEntry(xTxt+324, yTxt, 200, 30, COLOR_GREEN, "");
  GFTextEntry(xTxt+402, yTxt, 200, 30, COLOR_GREEN, "");
