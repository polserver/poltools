  elseif (page > 1 && page < maxpages) // mid pages
    GFButtonPage(MAX_X - 40, 40, G_STONE_UP, G_STONE_UP, page - 1);
    GFButtonPage(MAX_X - 40, MAX_Y - 40, G_STONE_DOWN, G_STONE_DOWN, page + 1);
  endif
  var bt;
  var tn;
  var reg;
  var txtcol;
  for (tn := starttemp; tn <= numtemp; tn := tn + 1)
