dealmoney := CheckMoney( me );
data[2]:= dealmoney;
data[3]:= "Player:  " + who.name;
moneyamount := CheckMoney( who );
data[4]:= moneyamount;

if ((dealmoney<100)and(gameover==0))
moneyreload := ReadGameClock() + 38400;
say("I'm out of money, thanks for playing!");
gumpexit :=1;
gameover := 0;
return;
endif

if (playerhere(who)=1)
gumpexit := 1;
gameover := 0;
SendSysMessage( who, "I want to keep an eye on you!");
return;
endif

if (moneyamount==0)
gumpexit := 1;
gameover := 0;
return;
endif

var box := SendDialogGump( who, layout, data );

case (box[0])
	101: //deal
	    NewHand( who );
	102: //hit
	    user( who );
	103: //stand
	    dealer(who);
	    LookAtHands(who);
	104: //double down
	   if (youcards==2)
	    dd:=1;
	    GetPayment (who, youbet);
	    youbet :=cint(youbet*2);
	    data[31] :=youbet;
	    user(who);
	    dealer(who);
	    LookAtHands(who);
	   endif
	   
	105: //bet
	if(gameOver)
		SendSysMessage( who, "Hand in Play!");
	else
	    value := cint(SendTextEntryGump( who, "What is your bet", 40 ));
	    if ((!value) or (value <0) or (value >500))
	    value := 500;
	    endif
	    youbet :=value;
	    data[31] := youbet;
	endif
	    
	666:
	PlaySoundEffect(who , 0x1EA );
	gameover := 0;
	gumpexit := 1;

endcase
endwhile

