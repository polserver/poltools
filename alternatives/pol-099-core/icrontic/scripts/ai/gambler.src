function getSuit(card)

if ((card>=1) and (card <=13))
   return "C";
elseif ((card>=14) and (card <=26))
   return "D";
elseif ((card>=27) and (card <=39))
   return "H";
else
   return "S";
endif
endfunction

function cardName(card)

while (card>13)
card := card - 13;
endwhile

if(card==1)
   return "A";
elseif(card = 11)
   return "J";
elseif(card = 12)
   return "Q";
elseif(card = 13)
   return "K";
else
   return "" + card;
endif
endfunction

function cardValue(card,value)

