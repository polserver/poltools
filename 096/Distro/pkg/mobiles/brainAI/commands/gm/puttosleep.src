//Example: .puttosleep -> Puts targetted NPC to sleep.

use uo;
use os;

include ":brainAI:npcCommands";

program textcmd_putToSleep(who)
	var targ := target(who);
	if ( !targ.IsA(POLCLASS_NPC) )
		SendSysMessage(who, "Cancelled.");
		return 0;
	else
		AI_Sleep(targ);
		SendSysMessage(who, "Done.");
	endif
	
	return 1;
endprogram
