function OldGFButtonIDC(x, y, release, press, close, retval)
    var line := "button " + CStr(GFref.x + Cint(x)) + " " + CStr(GFref.y + Cint(y));
    line := line + " " + CStr(Cint(release)) + " " + CStr(Cint(press)) + " ";
    line := line + "1 0 ";
    line := line + CStr(retval);
    GFlayout.append( line );
endfunction

