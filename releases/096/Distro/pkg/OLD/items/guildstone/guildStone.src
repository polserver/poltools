function resign(who)
  SendSysMessage(who, "Are you sure you want to resign?", 3, 40);
  var answer := YesNo(who, "Quit Guild?");
  if(!answer)
    SendSysMessage(who, "Canceled.", 3, 40);
    return;
  endif
  var ev := struct;
  ev.+source := who;
  ev.+guild  := guild;
  ev.+type   := "resign";
  ev.+gm     := gm[3];
  ev.+gs     := guildstone;
  stonemanager.SendEvent(ev);
endfunction

