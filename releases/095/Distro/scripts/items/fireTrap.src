use uo;
use os;
use util;

program flamestriketrap(who, item)
  Detach();
  if (who.dead || who.cmdlevel >0)
    return;
  endif
  PlayStationaryEffect(item.x, item.y, item.z, 0x3709, 0x0a, 0x1e);
  PlaySoundEffect(item, 0x226);
  var dmg := RandomInt(20) + 30;
  ApplyRawDamage(who, dmg);
endprogram