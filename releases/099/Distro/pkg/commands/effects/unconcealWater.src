use uo;
use os;

program textcmd_unconcealAir( who )

        var base_colour := who.color,
            base_graphic := who.graphic;

        who.graphic := 0x10;
        who.color := 1179;
        
        who.concealed := 0;
        
        PerformAction( who, 12 );
        PlaySoundEffect( who, 0x0119 );
        
        SleepMS( 400 );
        PerformAction( who, 12 );
        SleepMS( 1500);

        who.graphic := base_graphic;
        who.color := base_colour;

        return 1;
endprogram
