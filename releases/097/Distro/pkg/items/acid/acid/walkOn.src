use uo;
use vitals;

include ":acid:acid";

program acid_WalkOn(mobile, acid)
	if( TypeOf(mobile) == "Array" )
		acid := mobile[2];
		mobile := mobile[1];
	endif
	if ( mobile.cmdlevel )
		return 0;
	elseif ( mobile.dead )
		return 0;
	endif

	SendSysMessage(mobile, "*You step into a pool of acid*");
	if( !DealAcidDamage(acid, mobile, acid) )
		DealAcidDamage(acid, mobile, acid, "5d2");
	endif
	return 1;
endprogram
