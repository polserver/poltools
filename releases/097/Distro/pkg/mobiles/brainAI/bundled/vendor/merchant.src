use uo;
use os;

include ":brainAI:eventid";
include ":brainAI:npcNerves";
include ":brainAI:npcCommands";

program BrainNerve(params)
	var npc		:= params[1];
	//var nerve_name:= params[2];
	var event	:= params[3];
	//var settings	:= params[4];
	//var scripts	:= params[5];
	params := 0; // Not needed anymore.

	while ( npc )
		if ( event )
			case ( event.type )
				SYSEVENT_MERCHANT_SOLD:
					SoldEvent(npc, event);
					break;
				SYSEVENT_MERCHANT_BOUGHT:
					BoughtEvent(npc, event);
					break;
				default:
					break;
			endcase

			event := 0;
		endif

		SleepMS(5);
		event := Wait_For_Event(900000);
	endwhile
endprogram

function SoldEvent(npc, byref event)

	// Used to fix unused var report by ecompile: event;
	event := event;

	AI_Speak(npc, "I so don't know what to do with selling stuff right now...");

	return 1;
endfunction

function BoughtEvent(npc, byref event)

	// Used to fix unused var report by ecompile: event;
	event := event;

	AI_Speak(npc, "I am unable to buy anything from you right now.");

	return 1;

endfunction
